<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ pageTitle }}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8f8f8; margin: 2em; }
    .log-header { font-weight: bold; font-size: 1.1em; }
    .log-message { color: #198754; }
    .log-timestamp { color: #888; font-size: 0.9em; }
    .section-title { font-weight: bold; margin-top: 1em; }
    .parsed-nik-table th { background: #e0f7fa; }
    .accordion-button { font-size: 1em; }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="my-4">{{ pageTitle }}</h1>
    <div class="mb-4">
      <span class="badge bg-success">Success: {{ successCount }}</span>
      <span class="badge bg-danger ms-2">Not Success: {{ failCount }}</span>
    </div>
    <div class="accordion" id="logAccordion">
      {% for log in logs %}
        <div class="accordion-item">
          <div class="accordion-header" id="heading{{ loop.index }}">
            <button class="accordion-button collapsed {% if log.data.status == 'success' %}bg-success text-white{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
              {{ log.data.nik }} - {{ log.data.nama }}
            </button>
          </div>
          <div id="collapse{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#logAccordion">
            <div class="accordion-body">
              <div class="log-timestamp mb-2">Timestamp: {{ log.timestamp }}</div>
              <div class="log-message mb-2">{{ log.message }}</div>
              <span class="section-title">Basic Data</span>
              <table class="table table-bordered table-striped mb-3">
                <tr><th>Tanggal</th><td>{{ log.data.tanggal }}</td></tr>
                <tr><th>Nama</th><td>{{ log.data.nama }}</td></tr>
                <tr><th>Tgl Lahir</th><td>{{ log.data.tgl_lahir }}</td></tr>
                <tr><th>Alamat</th><td>{{ log.data.alamat }}</td></tr>
                <tr><th>BB</th><td>{{ log.data.bb }}</td></tr>
                <tr><th>TB</th><td>{{ log.data.tb }}</td></tr>
                <tr><th>Petugas</th><td>{{ log.data.petugas }}</td></tr>
                <tr><th>Status</th><td>{{ log.data.status }}</td></tr>
                <tr><th>Gender</th><td>{{ log.data.gender }}</td></tr>
                <tr><th>Age</th><td>{{ log.data.age }}</td></tr>
                <tr><th>Pekerjaan</th><td>{{ log.data.pekerjaan }}</td></tr>
              </table>
              <span class="section-title">Parsed NIK</span>
              {% if log.data.parsed_nik %}
              <table class="table table-bordered table-hover mb-3 parsed-nik-table">
                <tr><th>Status</th><td>{{ log.data.parsed_nik.status }}</td></tr>
                <tr><th>Message</th><td>{{ log.data.parsed_nik.message }}</td></tr>
                {% if log.data.parsed_nik.data %}
                  <tr><th>NIK</th><td>{{ log.data.parsed_nik.data.nik }}</td></tr>
                  <tr><th>Kelamin</th><td>{{ log.data.parsed_nik.data.kelamin }}</td></tr>
                  <tr><th>Lahir</th><td>{{ log.data.parsed_nik.data.lahir }}</td></tr>
                  <tr><th>Provinsi</th><td>{{ log.data.parsed_nik.data.provinsi }}</td></tr>
                  <tr><th>Kota/Kab</th><td>{{ log.data.parsed_nik.data.kotakab }}</td></tr>
                  <tr><th>Kecamatan</th><td>{{ log.data.parsed_nik.data.namaKec }}</td></tr>
                  <tr><th>Uniqcode</th><td>{{ log.data.parsed_nik.data.uniqcode }}</td></tr>
                  <tr><th>Original Lahir</th><td>{{ log.data.parsed_nik.data.originalLahir }}</td></tr>
                  <tr><th>Kelurahan</th>
                    <td>
                      {% if log.data.parsed_nik.data.kelurahan %}
                        <ul class="list-group list-group-flush">
                        {% for kel in log.data.parsed_nik.data.kelurahan %}
                          <li class="list-group-item">{{ kel.name }} <span class="text-muted">(ID: {{ kel.id }}, District: {{ kel.district_id }})</span></li>
                        {% endfor %}
                        </ul>
                      {% endif %}
                    </td>
                  </tr>
                {% endif %}
              </table>
              {% endif %}
              <span class="section-title">Form Values</span>
              {% if log.data.formValues %}
              <table class="table table-bordered table-sm mb-3">
                <thead class="table-light">
                  <tr>
                    <th>Label</th>
                    <th>Value</th>
                    <th>Selector</th>
                    <th>Disabled</th>
                  </tr>
                </thead>
                <tbody>
                {% for field in log.data.formValues %}
                <tr>
                  <td>{{ field.label }}</td>
                  <td>{{ field.value }}</td>
                  <td>{{ field.selector }}</td>
                  <td>{% if field.disabled %}Yes{% else %}No{% endif %}</td>
                </tr>
                {% endfor %}
                </tbody>
              </table>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
