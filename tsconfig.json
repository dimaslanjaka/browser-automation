{
  // VSCode JS/TS Server Config
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["ESNext", "ES2020", "DOM", "DOM.Iterable", "WebWorker", "WebWorker.Iterable"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "data/**/*",
    "scripts/**/*",
    "**/*.ts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "tsup.config.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/tmp/**",
    "**/coverage/**",
    "**/build/**",
    "**/public/**",
    "**/.cache/**",
    "**/packages/**"
  ]
}
