{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "typeRoots": [
      "./globals.d.ts",
      "./src/vite-env.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src",
    "test",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}