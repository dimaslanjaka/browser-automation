{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["ESNext", "ES2020", "DOM", "DOM.Iterable", "WebWorker", "WebWorker.Iterable"]
  },
  // "include": ["src/**/*", "test/**/*", "data/**/*", "scripts/**/*", "**/*.ts", "**/*.js", "**/*.cjs", "**/*.mjs", "tsup.config.ts"],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/tmp/**",
    "**/coverage/**",
    "**/build/**",
    "**/public/**",
    "**/.cache/**",
    "**/packages/**"
  ]
}
